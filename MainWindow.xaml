<Window x:Class="Calculadora.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculadora"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="textInput" HorizontalAlignment="Left" Margin="150,50,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="100" Height="50" TextChanged="textInput_TextChanged"/>
        <Button x:Name="adicionarNum" Content="Adicionar Número" HorizontalAlignment="Left" Margin="300,50,0,0" VerticalAlignment="Top" Height="50" Width="150" Click="adicionarNum_Click"/>

        <TextBox x:Name="showInput" HorizontalAlignment="Right" Margin="0,50,50,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" Height="200" TextChanged="showInput_TextChanged" FontSize="20" RenderTransformOrigin="1,0.5"/>

        <TextBox x:Name="displaySaida" HorizontalAlignment="Left" Margin="300,335,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Height="50" TextChanged="displaySaida_TextChanged"/>
        <Button x:Name="clear" Content="Clear" HorizontalAlignment="Left" Margin="150,335,0,0" VerticalAlignment="Top" Height="50" Width="100" Click="clear_Click"/>

        <Button x:Name="processarSoma" Content="Somar" HorizontalAlignment="Right" Margin="0,300,200,0" VerticalAlignment="Top" Height="50" Width="100" Click="processarSoma_Click"/>
        <Button x:Name="processarSubtracao" Content="Subtrair" HorizontalAlignment="Right" Margin="0,300,50,0" VerticalAlignment="Top" Height="50" Width="100" Click="processarSubtracao_Click"/>
        <Button x:Name="processarMultiplicacao" Content="Multiplicar" HorizontalAlignment="Right" Margin="0,370,200,0" VerticalAlignment="Top" Height="50" Width="100" Click="processarMultiplicacao_Click"/>
        <Button x:Name="processarDivisao" Content="Dividir" HorizontalAlignment="Right" Margin="0,370,50,0" VerticalAlignment="Top" Height="50" Width="100" Click="processarDivisao_Click"/>

    </Grid>
</Window>
